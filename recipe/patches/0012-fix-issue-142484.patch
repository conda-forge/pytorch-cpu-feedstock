   const auto value_type = c10::toRealValueType(input.scalar_type());
   out.resize_(batched_out_sizes, MemoryFormat::Contiguous);
-
+  auto astrides = input.strides();
+  bool all_zero = true;
+  for (const auto& stride : astrides) {
+      if (stride != 0) {
